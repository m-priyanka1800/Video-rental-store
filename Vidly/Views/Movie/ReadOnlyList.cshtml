@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Movies</h1>

<table id="movies" class="table table-hover">

    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>
    </thead>

    <tbody></tbody>

</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: "",
                    failure: function () { console.log("Success") }
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}
